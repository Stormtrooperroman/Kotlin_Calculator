<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/loved_by_the_king"
        android:text="@string/calculator"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/output"
        android:layout_width="363dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"

        android:layout_marginBottom="28dp"
        android:background="@drawable/round_text"
        android:fontFamily="@font/montserrat_bold"
        android:paddingStart="20dp"
        android:paddingTop="23dp"
        android:paddingEnd="20dp"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/AC_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/number_"

        android:layout_width="175dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_0"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onDigit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/number_1"

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_1"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onDigit"
        app:layout_constraintBottom_toTopOf="@+id/number_"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/number_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_2"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onDigit"
        app:layout_constraintBottom_toTopOf="@+id/number_"
        app:layout_constraintStart_toEndOf="@+id/number_1" />

    <Button
        android:id="@+id/number_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_3"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onDigit"
        app:layout_constraintBottom_toTopOf="@+id/comma"
        app:layout_constraintStart_toEndOf="@+id/number_2" />

    <Button
        android:id="@+id/number_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_4"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onDigit"
        app:layout_constraintBottom_toTopOf="@+id/number_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/number_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_5"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onDigit"
        app:layout_constraintBottom_toTopOf="@+id/number_2"
        app:layout_constraintStart_toEndOf="@+id/number_4" />

    <Button
        android:id="@+id/number_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_6"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        android:onClick="onDigit"
        app:backgroundTint="#F1F3F6"
        app:layout_constraintBottom_toTopOf="@+id/number_3"
        app:layout_constraintStart_toEndOf="@+id/number_5" />

    <Button
        android:id="@+id/number_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_7"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onDigit"
        app:layout_constraintBottom_toTopOf="@+id/number_4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/number_8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_8"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onDigit"
        app:layout_constraintBottom_toTopOf="@+id/number_5"
        app:layout_constraintStart_toEndOf="@+id/number_7" />

    <Button
        android:id="@+id/number_9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/_9"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onDigit"
        app:layout_constraintBottom_toTopOf="@+id/number_6"
        app:layout_constraintStart_toEndOf="@+id/number_8" />

    <Button
        android:id="@+id/comma"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/comma"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="addDot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/number_" />

    <Button
        android:id="@+id/AC_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/ac"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onClear"
        app:layout_constraintBottom_toTopOf="@+id/number_7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/plus_minus_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/plus_minus"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="onOperator"
        app:layout_constraintBottom_toTopOf="@+id/number_8"
        app:layout_constraintStart_toEndOf="@+id/AC_button" />

    <Button
        android:id="@+id/percent_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/percent"
        android:textColor="#3A4E89"
        android:textSize="29sp"
        app:backgroundTint="#F1F3F6"
        android:onClick="percent"
        app:layout_constraintBottom_toTopOf="@+id/number_9"
        app:layout_constraintStart_toEndOf="@+id/plus_minus_btn" />

    <Button
        android:id="@+id/div_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="onOperator"
        android:text="@string/div"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:backgroundTint="#3A4E89"
        app:layout_constraintBottom_toTopOf="@+id/mul_btn"
        app:layout_constraintStart_toEndOf="@+id/percent_btn" />

    <Button
        android:id="@+id/mul_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/x"
        android:textColor="#FFFFFF"
        android:textSize="29sp"
        app:backgroundTint="#3A4E89"
        android:onClick="onOperator"
        app:layout_constraintBottom_toTopOf="@+id/minus"
        app:layout_constraintStart_toEndOf="@+id/number_9" />

    <Button
        android:id="@+id/minus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/minus"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:backgroundTint="#3A4E89"
        android:onClick="onOperator"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintStart_toEndOf="@+id/number_6" />

    <Button
        android:id="@+id/plus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/plus"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:backgroundTint="#3A4E89"
        android:onClick="onOperator"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        app:layout_constraintStart_toEndOf="@+id/number_3" />

    <Button
        android:id="@+id/equal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/equal"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:backgroundTint="#3A4E89"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comma" />

</androidx.constraintlayout.widget.ConstraintLayout>